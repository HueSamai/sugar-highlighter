{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "SUGAR",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#sections"
		},
		{
			"include": "#operators"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.sugar",
					"match": "\\b(start at|put|mov|moo|add|addn|sub|subn|cmp|cmpn|equ|equn|inv|jmp|jfz|jnz|hlt|call|ret|push|pull|mtp|mfp|prt|prtp|inp|pin|raw|guad)\\b"
				},
				{
					"name": "entity.name.tag.sugar",
					"match": "FWD[0-9]+|BWD[0-9]+"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.sugar",
					"match": "[a-z]?x[0-9a-f]+|[a-z]?[0-9]+"
				}
			]
		},
		"comments": {
			"begin": ";",
			"end": "\n",
			"name": "comment.line.sugar"
		},
		"sections":{
			"patterns": [
				{
					"name": "entity.name.class.sugar",
					"match": "[^0-9 =;,~][^ :;,]*:"
				},
				{
					"name": "entity.name.function",
					"match": "[^0-9 =;,~][^ :;,]*"
				}
			]
		},
		"operators": 
		{
			"patterns":
			[
				{
					"name": "keyword.operator.sugar",
					"match": "~|="
				}
			]
		}
		
	},
	"scopeName": "source.sugar"
}